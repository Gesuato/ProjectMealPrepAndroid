<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewNutriment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Veggies"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextMarketList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ex : brÃ³colis"
        android:inputType="textAutoComplete"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/textViewNutriment" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/icon_plus"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnLess"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_less"
        app:layout_constraintRight_toRightOf="@id/btnPlus"
        app:layout_constraintTop_toBottomOf="@id/btnPlus" />

    <Button
        android:id="@+id/btnNutriment"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_circle_btn_vegetable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnPlus"
        app:layout_constraintTop_toTopOf="@id/btnPlus" />
</android.support.constraint.ConstraintLayout>